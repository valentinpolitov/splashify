{
  "name": "splashify",
  "version": "0.3.1",
  "description": "Generate launch screens for your app",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": {
    "name": "Valentin Politov",
    "url": "https://x.com/politov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/valentinpolitov/splashify"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "launchscreen",
    "splashscreen",
    "splash",
    "launch",
    "screen",
    "generate",
    "app",
    "pwa",
    "ios"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:write": "prettier --write \"**/*.{ts,json}\"",
    "format:check": "prettier --check \"**/*.{ts,json}\"",
    "release": "changeset version",
    "pub:release": "npm run build && pnpm publish --access public",
    "clean": "rimraf dist .splashify",
    "test": "vitest run"
  },
  "dependencies": {
    "canvas": "3.2.0",
    "chalk": "5.6.2",
    "commander": "14.0.1",
    "fs-extra": "11.3.2",
    "ora": "9.0.0",
    "prompts": "2.4.2",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.18.11",
    "@types/prompts": "2.4.9",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.46.1",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "^16.4.0",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "tsup": "8.5.0",
    "type-fest": "5.1.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
